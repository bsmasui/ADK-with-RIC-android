	<Button android:id="@+id/scenario" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Start Scenario Mode"
		android:onClick="onScenarioButtonClick" />

	<Button android:id="@+id/demokit" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Start DemoKit"
		android:onClick="onDemoKitButtonClick" />


</LinearLayout>
